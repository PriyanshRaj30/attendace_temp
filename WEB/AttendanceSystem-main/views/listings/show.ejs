<% layout("/layouts/boilerplate") %>

<main class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Student Detail Card -->
            <div class="card mb-4">
                <div class="row no-gutters">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h2 class="card-title"><%= student.name %></h2> <!-- Student name -->
                            <p class="card-text"><strong>Department:</strong> <%= student.dept %></p> <!-- Department -->
                            <p class="card-text"><strong>Position:</strong> <%= student.postion %></p> <!-- Corrected here -->
                            <p class="card-text"><strong>Starting Year:</strong> <%= student.starting_year %></p> <!-- Starting Year -->
                            <p class="card-text"><strong>Total Attendance:</strong> <%= student.total_attendance %></p> <!-- Total Attendance -->
                            <p class="card-text"><strong>Last Attendance Time:</strong> <%= new Date(student.last_attendance_time).toLocaleString() %></p> <!-- Last Attendance Time -->
                            <p class="card-text"><strong>Email:</strong> <%= student.email %></p> <!-- Email -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Button Group -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/students/<%= student._id %>/generate-report" class="btn btn-success me-2 flex-fill">Generate Report</a>
                <a href="/students/<%= student._id %>/edit" class="btn btn-primary me-2 flex-fill">Edit Student</a>
                
                <form action="/students/<%= student._id %>?_method=DELETE" method="POST" class="mb-0 flex-fill">
                    <button type="submit" class="btn btn-danger w-100">Delete Student</button>
                </form>
            </div>
        </div>
    </div>
</main>